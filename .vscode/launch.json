{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: runserver (WSL)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "autoStartBrowser": false,
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "${workspaceFolder}",
        "DJANGO_SETTINGS_MODULE": "core.settings"
      }
    }
  ]
}
